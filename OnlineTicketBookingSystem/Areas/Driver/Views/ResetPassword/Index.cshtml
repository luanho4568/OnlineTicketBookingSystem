@model OnlineTicketBookingSystem.Models.ViewModel.ResetPasswordVM

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Thay đổi mật khẩu</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="post">
                        <input type="hidden" id="authToken" name="authToken" />

                        <!-- Thông tin mật khẩu -->
                        <fieldset class="border p-4 mb-4">
                            <div class="row">
                                <div class="form-floating mb-3 col-md-12">
                                    <input asp-for="@Model.OldPassword" class="form-control" type="password" placeholder="Nhập mật khẩu cũ" required />
                                    <label asp-for="@Model.OldPassword" class="mx-2">Mật khẩu cũ</label>
                                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3 col-md-12">
                                    <input asp-for="@Model.NewPassword" class="form-control" type="password" placeholder="Nhập mật khẩu mới" required />
                                    <label asp-for="@Model.NewPassword" class="mx-2">Mật khẩu mới</label>
                                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3 col-md-12">
                                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" required />
                                    <label asp-for="@Model.ConfirmPassword" class="mx-2">Xác nhận mật khẩu mới</label>
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-lg btn-primary">Xác nhận</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.onload = function () {
            setAuthToken();
        }

        function setAuthToken() {
            const token = localStorage.getItem('authToken');
            document.getElementById('authToken').value = token;
        }
    </script>
}
