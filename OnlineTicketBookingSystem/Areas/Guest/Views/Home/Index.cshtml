<!-- Header Section -->
<header class="py-5 text-center position-relative" style="min-height: 550px; background-image: url('/images/background/home.png'); background-size: cover; background-position: center;">
    <!-- Search Section -->
    <div class="search-section bg-white text-black p-4 container" style="bottom: 0; left: 0; border-radius: 6px; margin-top: 130px;">
        <div class="container">
            <h4 class="text-center mb-4">Tìm Kiếm Chuyến Đi</h4>
            <form>
                <div class="row align-items-center">
                    <div class="col-md-3 mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-bus-alt"></i></span>
                            <select class="form-control" id="fromLocation">
                                <option value="">Chọn nơi đi</option>
                                <option value="hanoi">Hà Nội</option>
                                <option value="hochiminh">TP. Hồ Chí Minh</option>
                                <option value="danang">Đà Nẵng</option>
                                <option value="haiphong">Hải Phòng</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <select class="form-control" id="toLocation">
                                <option value="">Chọn nơi đến</option>
                                <option value="hanoi">Hà Nội</option>
                                <option value="hochiminh">TP. Hồ Chí Minh</option>
                                <option value="danang">Đà Nẵng</option>
                                <option value="haiphong">Hải Phòng</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input type="date" class="form-control" id="departureDate">
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <button type="submit" class="btn btn-warning w-100">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</header>

