@model IEnumerable<User>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Danh sách tài xế</h2>
        </div>
    </div>
    <!-- Thêm lớp table-responsive vào bảng -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped mt-4" id="tblData">
            <thead>
            <th>Tên</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Số dư</th>
            <th>Kích hoạt</th>
            <th>Trạng thái</th>
            <th></th>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/api/v1/user/GetAllUser?groupId=3",
                    "dataSrc": function (json) {
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "fullName", "width": "11%" },
                    { "data": "email", "width": "10%" },
                    {
                        "data": null,
                        "render": function (data) {
                            return `${data.address}, ${data.ward.name}, ${data.district.name}, ${data.province.name}`;
                        },
                        "width": "14%"
                    },
                    { "data": "phoneNumber", "width": "10%" },
                    {
                        "data": "dateOfBirth",
                        "render": function (data) {
                            return data.split('T')[0]; // Loại bỏ phần T00:00:00 và chỉ giữ ngày
                        },
                        "width": "10%"
                    }, {
                        "data": null,
                        "render": function (data) {
                            return data.gender == "Male" ? "Nam" : "Nữ";
                        },
                        "width": "9%"
                    },
                    { "data": "balance", "width": "7%" },
                    {
                        "data": "isActive",
                        "render": function (data) {
                            return data
                                ? `<div class="text-center"><i class="bi bi-check-circle-fill text-success"></i></div>`
                                : `<div class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></div>`;
                        },
                        "width": "10%"
                    },
                    {
                        "data": "isStatus",
                        "render": function (data) {
                            return data
                                ? `<div class="text-center"><i class="bi bi-check-circle-fill text-success"></i></div>`
                                : `<div class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></div>`;
                        },
                        "width": "10%"
                    },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `
                                        <div class="text-center">
                                                    <a class="btn btn-warning" href="/Admin/User/EditUser?id=${data}">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a class="btn btn-danger" onclick="return Delete('/api/v1/user/Delete?id=${data}')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>`;
                        },
                        "width": "12%"
                    }

                ],
                "responsive": true,
                "language": {
                    "emptyTable": "Không có tài xế nào"
                }
            });
        }

        function Delete(url) {
            Swal.fire({
                title: "Bạn có chắc chắn xoá?",
                text: "Bạn sẽ không thể hoàn tác hành động này!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Vâng, xoá nó!",
                cancelButtonText: "Huỷ"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.code == 200) {
                                Swal.fire({
                                    title: "Xoá thành công!",
                                    text: "Dữ liệu của bạn đã được xoá.",
                                    icon: "success"
                                });
                                dataTable.ajax.reload();
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Xoá không thành công!"
                                });
                            }
                        }
                    });
                }
            });
        }
    </script>
}
