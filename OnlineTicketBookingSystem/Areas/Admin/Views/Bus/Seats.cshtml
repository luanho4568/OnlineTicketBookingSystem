<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Danh sách ghế</h2>
        </div>
        <div class="col-6 text-end">
            <a href="/Admin/Bus" class="btn btn-lg btn-outline-danger me-3">Quay lại</a>
        </div>
    </div>
    <table class="table table-bordered table-striped mt-4" id="tblData">
        <thead>
            <tr>
                <th>Tên Xe Bus</th>
                <th>Số ghế</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>
@section Scripts {
    <script>
        var dataTable;
        $(document).ready(function () {
            loadDataTable();
        });
        var BusId = "@ViewBag.BusId"
            function loadDataTable() {
                dataTable = $('#tblData').DataTable({
                    "ajax": {
                        "url": `/api/v1/bus/GetSeatsByBusId/${BusId}`,
                        "dataSrc": function (json) {
                            return json.data;
                        }
                    },
                    "columns": [
                        { "data": "buses.name", "width": "calc(100%/4)" },
                        { "data": "seatNumber", "width": "calc(100%/4)" },
                    {
                        "data": "status",
                        "render": function (data) {
                            if(data == "Empty") {
                                return "Trống"
                            } else if (data == "Sold") {
                                return "Đã mua"
                            } else if (data == "Maintenance") {
                                return "Bảo trì"
                            }
                        },
                        "width": "calc(100%/4)"
                    }

                        , {
                            "data": "id",
                            "render": function (data) {
                                return `
                                        <div class="text-center">
                                          <a class="btn btn-warning mx-2" href="/Admin/Bus/EditSeat/${data}">
                                             <i class="bi bi-pencil-square"></i>
                                          </a>
                                        </div>`;
                            },
                            "width": "calc(100%/4)"
                        }

                    ],
                    "responsive": true,
                    "language": {
                        "emptyTable": "Không có ghế nào"
                    }
                });
            }
    </script>
}
